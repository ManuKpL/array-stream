{
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext"],
    "baseUrl": ".",
    "types": ["jest", "node"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node"
  },
  "include": ["src"]
}
